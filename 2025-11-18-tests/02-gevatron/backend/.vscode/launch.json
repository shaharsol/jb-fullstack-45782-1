{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug with ts-node-dev",
        "runtimeArgs": [
            "-r",
            "ts-node-dev/register"
        ],
        "args": [
          "${workspaceFolder}/src/server.ts" // Replace with your main entry file
        ],
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "port": 9229 // Must match the inspect port in args
      }
    ]
  }